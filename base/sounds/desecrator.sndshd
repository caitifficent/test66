sound sounds/vehicles/desecrator/recharge_2s {
	//private
	//no_occlusion
	volume		-9
	sounds/vehicles/desecrator/local_fire_recharge_2s.wav
}

sound sounds/vehicles/desecrator/recharge_4s {
	//private
	//no_occlusion
	volume		-9
	sounds/vehicles/desecrator/local_fire_recharge_4s.wav
}


sound sounds/vehicles/desecrator/turbo_start {
	volume		-5
	minDistance	10
	maxDistance 90
	looping
	leadin
	sounds/vehicles/desecrator/turbo_start.wav
	sounds/vehicles/desecrator/turbo_loop.wav
}

sound sounds/vehicles/desecrator/turbo_stop {
	volume		-5
	minDistance	10
	maxDistance 90

	sounds/vehicles/desecrator/turbo_stop.wav
}


sound sounds/vehicles/desecrator/engine_start {

	volume		-7
	maxDistance 75

	sounds/vehicles/desecrator/xdesecrator_start.wav
}

sound sounds/vehicles/desecrator/engine_stop {

	maxDistance 75
	
	sounds/vehicles/desecrator/xdesecrator_stop_02a.wav
}

sound sounds/vehicles/desecrator/engine_idle {
	minDistance	25
	maxDistance 60
	looping
	// Synth harmonics
	sounds/vehicles/desecrator/xdesecrator_hover_02.wav	
}

sound sounds/vehicles/desecrator/engine_hover {
	minDistance	25
	maxDistance	75
	// Main Engine hum with electro layer
	looping
	sounds/vehicles/desecrator/xdesecrator_engine_02a.wav
}

