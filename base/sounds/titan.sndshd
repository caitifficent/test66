sound sounds/vehicles/titan/overdrive_start {

	minDistance	25
	maxDistance	125
	
	looping
	leadin
	
	sounds/vehicles/titan/turbo_start.wav
	sounds/vehicles/titan/turbo_loop.wav
}

sound sounds/vehicles/titan/overdrive_stop {

	minDistance	25
	maxDistance	125
	
	sounds/vehicles/titan/turbo_stop.wav
}


sound sounds/vehicles/titan/engine/start {

	volume -10
	maxDistance	100

	//antiPrivate

	sounds/vehicles/titan/engine_on.wav
}

