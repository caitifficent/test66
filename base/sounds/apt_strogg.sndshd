
sound sounds/deployables/apt_strogg/deploy {

	volume 0
	minDistance	10
	maxDistance 75

	sounds/deployables/apt_strogg/deployseq.wav
}

sound sounds/deployables/strogg/apt/fire {

	maxDistance 100

	playOnce

	looping
	leadin
	sounds/deployables/apt_strogg/fire_start.wav
	sounds/deployables/apt_strogg/fire_loop.wav
}

sound sounds/deployables/strogg/apt/fire/stop {

	maxDistance 100

	sounds/deployables/apt_strogg/fire_stop.wav
}

sound sounds/deployables/strogg/apt/fire/far {

	volume -15
	farDistance 50
	maxDistance 300

	playOnce

	looping
	sounds/deployables/apt_strogg/fire_far_loop.wav
}

sound sounds/deployables/strogg/apt/fire/far/stop {

	volume -15
	farDistance 50
	maxDistance 300

	sounds/deployables/apt_strogg/fire_far_stop.wav
}
