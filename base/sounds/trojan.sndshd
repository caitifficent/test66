sound sounds/vehicles/trojan/overdrive_start {

	volume -8
	maxDistance 75
	
	looping
	leadin
	sounds/vehicles/misc/overdrive_start_gdf.wav
	sounds/vehicles/misc/overdrive_loop_gdf.wav
}

sound sounds/vehicles/trojan/overdrive_stop {
	
	volume -2
	maxDistance 75
	playOnce

	sounds/vehicles/misc/overdrive_stop_gdf.wav
}

sound sounds/vehicles/trojan/engine/start {

	maxDistance	75
	no_occlusion

