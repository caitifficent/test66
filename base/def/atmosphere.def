entityDef atmosphere {
	"editor_spawnclass"				"sdEntityClass_Atmosphere"
	"editor_color"					"0 0.3 0.9"
	"editor_mins"					"-16 -16 -16"
	"editor_maxs"					"16 16 16"
	"editor_usage"					"Use this entity to add an atmosphere to your level."

	"editor_var atmospheredecl"		"Enter an atmosphere declaration"
	"editor_callback atmospheredecl" "decl://atmosphere"

	"editor_var skymodel"			"Model to use for the dome"
	"editor_callback skymodel"		"model://models/skydomes"

	"editor_atmosphere"				"1"
	"spawnclass"					"sdAtmosphere"
	"skymodel"						"models/skydomes/skydome5.lwo"
	"scriptobject"					"default"

	"skymodel_old"					"models/skydomes/skydome_oldstyle.lwo"
	"skymodel_box"					"models/skydomes/skydome_boxstyle2.ase"
}

