//		map	textures/dirt/eroded_earth_local.tga
	}
	{
		blend 	diffusemap
		map 	textures/rock/rockface02c_d.tga
//		map	textures/dirt/eroded_earth_d.tga
		vertexColor
	}
	{
		blend	specularmap
		map	textures/rock/rockface10_s.tga
