// ====================================================
// Deployable Icons for Command Map
// ====================================================

template templates/materials/cm/deployable_state {
	parameters< ImageParm >
	text {
		sort gui
		{
			blend blend
			map clamp "ImageParm"
			vertexColor
		}
		{
			if parm5 < 0.66
			blend blend
			red ( 0.3 * sinTable[ time ] ) + 0.7
			green 0
			blue 0
			map clamp "guis/assets/qet/cm_damaged.tga"
		}
	}
}

template templates/materials/cm/deployable_state_active {
	text {
		{
			if parm6 == 1 && parm5 >= 0.33 && parm5 == 0
			blend blend
			red 0
			blue ( ( 0.3 * sinTable[ time ] ) + 0.7 )
			green ( ( 0.3 * sinTable[ time ] ) + 0.7 )
			map clamp "guis/assets/qet/cm_active.tga"
		}
	}
}

material guis/assets/qet/cm_artillery
{
	useTemplate templates/materials/cm/deployable_state< "guis/assets/qet/cm_artillery.tga" >
}

