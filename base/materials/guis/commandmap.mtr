material guis/assets/commandmap/icon_player
{
	sort gui
	{
		blend blend
		map nopicmip clamp guis/assets/commandmap/icon_player.tga
		vertexColor
	}
}

material guis/assets/commandmap/icon_player_flash
{
	sort gui
	{
		blend blend
		alpha ( cosTable[ time * 3 ] ) + 1.2
		map nopicmip clamp guis/assets/commandmap/icon_player.tga
		vertexColor
	}
}

