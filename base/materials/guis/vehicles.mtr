
// ====================================================
// materials for Hornet HUD Attitude Indicator
// ====================================================

material guis/assets/qet/hud_attitude_overlay_strogg
{
	sort nearest
	{
		blend add
		colored
		map clamp guis/assets/qet/hud_attitude_overlay_strogg.tga
		maskAlpha
	}
}

material guis/assets/qet/hud_attitude_pitch_strogg
{
	sort nearest
	{
		blend add
		map clamp guis/assets/qet/hud_attitude_pitch_strogg.tga
		colored
		alpha 0.5
		red 1
		maskAlpha
	}
}


