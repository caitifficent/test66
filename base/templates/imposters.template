
template material/imposter_material {
    parameters < 
    	ImageName	//The name of the model this imposter material is for WITHOUT any file extensions (like .lwo)
    >
    text {    
    	sort decal
	{
		alphatocoverage
		alphaTest 0.05
		//blend blend
		program imposters/lit
		diffuseMap nopicmip ImageName
		maskAlpha
		writeDepth
	}
	translucent
    	sort decal
    }
}

